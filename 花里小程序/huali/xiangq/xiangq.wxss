.xiangq{
  display: flex;
  flex-wrap: wrap;
}
.xiangq image{
  width: 100%;
  height: 400px;
  margin-top: 20px;
}
.xiangq>view:nth-of-type(1){
  width: 98%;
  margin: 2% 0px 10px 2%;
  font-size: 16px;
}
.xiangq>view:nth-of-type(2){
  width: 98%;
  margin: 2% 0px 10px 2%;
  font-size: 22px;
}
.yf{
  width: 100%;
  height: 40px;
  line-height: 40px;
  font-size: 14px;
  color: rgb(204, 203, 203);
  padding-left: 2%;
  border: 1px rgb(221, 220, 220) solid;
}
.aq{
  display: flex;
  justify-content: space-around;
  padding: 12px;
}
.wd{
  display: flex;
  justify-content: space-around;
  padding: 12px;
}

.gopay{
  display: flex;
  align-content: center;
  height: 50px;
  width: 100%;
  font-size: 16px;
  position: fixed;
  bottom: 0px;
}
.gopay>view:nth-of-type(2){
  background-color: red;
  color: white;
  width: 50%;
  text-align: center;
  line-height: 50px;
}
.gopay>view:nth-of-type(1){
  background-color: rgb(245, 184, 181);
  color: black;
  width: 50%;
   text-align: center;
  line-height: 50px;
}
