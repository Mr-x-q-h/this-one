/* huali/hl/huali.wxss *//* huali/huali.wxss */

/* logo图 */
.myimg {
  display: flex;
  justify-content: flex-start;
  flex-direction: column;
  width: 100%;
  height: 250px;
}

.myimg image {
  display: flex;
  width: 100%;
  height: 100%;
}
/* 导航条 */
.daohang {
  display: flex;
  justify-content: space-around;
}

.daohang1 {
  text-align: center;
  font-size: 12px;
  width: 25%;
  height: 40px; 
  padding: 10px;
}

.daohang1 image {
  width: 20px;
  height: 20px;
}
.lunbo swiper{
  width: 100%;
  height: 200px;
}
swiper-item{
  text-align: center;
  width:100px!important;
  height:100%;
  padding: 5px;

}
.lunboimg image {
  width: 100px;
  height: 120px;
}
.lunboimg view{
  height: 10px;
}


/* 圣诞精选 */
.titleo view{
  width: 100%;
  height: 40px;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items:center;
  background-color: rgb(212, 211, 211)
}

/* 圣诞精选图片 */
.shengdan{
  display: flex;
  justify-content:flex-start;
  flex-wrap: wrap;
}
.shengdanimg{
  width: 30%;
  height: 100px;
  padding: 15px 6px 40px 6px;
  text-align: center;
  font-size: 12px;
}
.shengdanimg view{
  height: 10px;
}
.shengdanimg image{
  width: 100%;
  height: 100%;
}
/* 新品上架 */

.newmyimg{
  display: flex;
  justify-content: flex-start;  
  flex-wrap: wrap;
}

.newmyimg image{
  height: 370px;
  width: 90%;
  padding: 5%;
}
.newmyimg>view:nth-of-type(1){
  width: 100%;
  height: 20px;
  margin:0px 0px 20px 30px; 
}
.newmyimg>view:nth-of-type(2){
  display: flex;
  width: 100%;
  height: 20px;
  margin:0px 0px 20px 30px; 
}
/* 购物车图标 */
.gwc{
  width: 25px;
  height: 25px;
  margin-left: 70%;
  text-align: center;
  line-height: 37px;
  border: 1px black solid;
  border-radius: 50%;
  margin-bottom: 50px;
}
.gwc image{
 width: 20px;
 height: 20px;
 margin-top: -50px;
}
